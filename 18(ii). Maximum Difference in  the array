#include<bits/stdc++.h>
#include<algorithm>
using namespace std;
int main()
{
    int n;
    cout<<"Enter the  size\n";
    cin>>n;
    int a[n];
    for(int i=0;i<n;i++)
    {
        cin>>a[i];
    }
    cout<<"\nBefore swaping\n";
    for(int i=0;i<n;i++)
    {
        cout<<a[i]<<" ";
    }

  sort(a,a+n);

    cout<<"\nNow sorted array is\n";
    for(int i=0;i<n;i++)
    {

        cout<<a[i]<<" ";
    }
    int max=(a[n-1]-a[0]);
    cout<<"\nMaximum difference is: "<<max;
    cout<<"\nAnd the number is: "<<a[0]<<" "<<a[n-1];
    return 0;
    }
